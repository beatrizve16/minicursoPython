pares = 0
impares = 0
negativos=0
positivos=0


for x in range(5) :   
    n=int(input('Digite um numero:'))
 
    if n % 2 == 0:
        pares+=1
    if n % 2 != 0:
        impares +=1
    if n < 0:
        negativos+=1
    if n > 0:
        positivos+=1
        
print("Pares:" , pares)
print("Impares:" , impares)
print("Negativos:" , negativos )
print("Positivos:" , positivos)

